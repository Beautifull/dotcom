SHELL=/bin/sh
#VERBOSE=on
LOGFILE=$HOME/.procmail.log
HCBIN=/home/hebcal/local/bin
MAILDIR=$HOME/mail

:0
* ^TO(shabbat-subscribe|shabbat-unsubscribe)
{
  :0 c:manage.lock
  | $HCBIN/shabbat_manage.pl

  :0:
  manage-saved
}


:0
* ^TO(shabbat-return)
{
  :0 c:bounce.lock
  | $HCBIN/shabbat_bounce.pl

  :0:
  return-saved
}

:0
/dev/null
